@model List<CoreApp31.Models.UserRoleViewModel>
@{
    ViewData["Title"] = "UserList";
}

<h1>UserList</h1>
<table class="table-bordered table table-dark">
    <thead>
        <tr>
            <th>UserName</th>
            <th>RoleName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            
            <td>@user.UserName</td>
            <td>@user.RoleName</td>
            <td> @Html.ActionLink("AssignRole", "AssignRole", new { id = user.UserId }) </td>
        </tr>
        }
    </tbody>
</table>

